<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryDark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/work_days" />

        <TextView
            android:visibility="gone"
            android:id="@+id/workDaysNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryDark"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:textColor="@color/primaryDark"
            android:id="@+id/workday_sleep_time_text"
            android:text="@string/sleep_time_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:id="@+id/work_day_wake_time_text"
            android:textSize="20sp"
            android:textColor="@color/primaryDark"
            android:text="@string/wake_time_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <View android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"/>

    <View android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryLight"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/off_days" />


        <TextView
        android:visibility="gone"
            android:id="@+id/offDaysNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryLight"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textSize="20sp"
            android:textColor="@color/primaryLight"
            android:id="@+id/off_day_sleep_time_text"
            android:text="@string/sleep_time_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:id="@+id/off_day_wake_time_text"
            android:textSize="20sp"
            android:textColor="@color/primaryLight"
            android:text="@string/wake_time_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>